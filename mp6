import mysql.connector

def connect_db():
    # Step 1: Establish connection
    conn = mysql.connector.connect(
        host="localhost",
        user="root",          # change as per your MySQL user
        password="yourpassword",  # enter your password
        database="college"
    )
    return conn

def add_student():
    conn = connect_db()
    cur = conn.cursor()
    roll = int(input("Enter Roll No: "))
    name = input("Enter Name: ")
    cls = input("Enter Class: ")
    marks = int(input("Enter Marks: "))
    sql = "INSERT INTO student (roll_no, name, class, marks) VALUES (%s, %s, %s, %s)"
    cur.execute(sql, (roll, name, cls, marks))
    conn.commit()
    print("‚úÖ Record Inserted Successfully!")
    conn.close()

def delete_student():
    conn = connect_db()
    cur = conn.cursor()
    roll = int(input("Enter Roll No to Delete: "))
    sql = "DELETE FROM student WHERE roll_no = %s"
    cur.execute(sql, (roll,))
    conn.commit()
    print("üóëÔ∏è Record Deleted Successfully!")
    conn.close()

def update_student():
    conn = connect_db()
    cur = conn.cursor()
    roll = int(input("Enter Roll No to Update: "))
    new_marks = int(input("Enter New Marks: "))
    sql = "UPDATE student SET marks = %s WHERE roll_no = %s"
    cur.execute(sql, (new_marks, roll))
    conn.commit()
    print("‚úèÔ∏è Record Updated Successfully!")
    conn.close()

def view_students():
    conn = connect_db()
    cur = conn.cursor()
    cur.execute("SELECT * FROM student")
    rows = cur.fetchall()
    print("\nüìò Student Records:")
    print("-" * 40)
    for row in rows:
        print(f"Roll No: {row[0]}, Name: {row[1]}, Class: {row[2]}, Marks: {row[3]}")
    print("-" * 40)
    conn.close()

def main():
    while True:
        print("\n=== Student Database Menu ===")
        print("1. Add Student")
        print("2. Delete Student")
        print("3. Update Student")
        print("4. View All Students")
        print("5. Exit")

        choice = input("Enter your choice: ")

        if choice == '1':
            add_student()
        elif choice == '2':
            delete_student()
        elif choice == '3':
            update_student()
        elif choice == '4':
            view_students()
        elif choice == '5':
            print("Exiting...")
            break
        else:
            print("Invalid Choice! Try again.")

if __name__ == "__main__":
    main()




if the code sucessfully run then u have done it .



